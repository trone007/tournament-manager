{% extends "default.html.twig" %}
{% set credentialsKey = constant('Src\\Service\\User\\CredentialsServiceInterface::WRONG_CREDENTIALS_KEY') %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/login-form.css?v=1">
{% endblock %}
{% block content %}
    <div class="wrapper fadeInDown">
        <div id="formContent">
            {% if session.get(credentialsKey) %}
            <div class="alert alert-danger" role="alert">
                <strong>Warning!</strong> Wrong credentials.
            </div>
            {% endif %}
            <form action="/login" method="post">
                <input type="text" id="login" class="fadeIn second" name="username" placeholder="login" required>
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="password" required>
                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>
        </div>
    </div>
{% endblock %}