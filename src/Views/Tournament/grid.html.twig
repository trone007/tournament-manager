{% extends "layout.html.twig" %}
{% block stylesheets %}
{{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" rel="stylesheet" />
{% endblock %}
{% block body_content %}
    <div class="brackets_container">
        <button class="reset btn btn-info">Сброс турнира к исходным настройкам</button>
        <table>
            <thead>
            <tr>
                <th> <span>1/16</span> </th>
                <th> <span>1/8</span> </th>
                <th> <span>Полуфинал</span> </th>
                <th> <span>Финал</span> </th>
                <th> <span>Полуфинал</span> </th>
                <th> <span>1/8</span> </th>
                <th> <span>1/16</span> </th>
            </tr>
            </thead>
            <tbody>
            <tr id="playground">
                <td class="round_column r_1">
                </td>
                <td class="round_column r_2">
                </td>
                <td class="round_column r_3">
                </td>
                <td class="round_column r_4 final focus">
                </td>
                <td class="round_column r_3_reversed reversed">
                </td>
                <td class="round_column r_2_reversed reversed">
                </td>
                <td class="round_column r_1_reversed reversed">
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="modal" id="scoreModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Введите результат матча</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>В случае ничейного результата отметьте победителя</p>
                        <div class="row">
                            <div class="col-md-5">
                                <select class="form-control score" id="homeScore">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                                <label>
                                    <input type="radio" name="winner" value="home" disabled/>
                                    Победитель
                                </label>
                            </div>
                            <div class="col-md-1">
                                :
                            </div>
                            <div class="col-md-5">
                                <select class="form-control score" id="awayScore">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                                <label>
                                    <input type="radio" name="winner" value="away" disabled/>
                                    Победитель
                                </label>
                            </div>
                            <input type="hidden" id="gameNumber"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary save-score">Сохранить изменения</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

    <script src="http://underscorejs.org/underscore-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
    <script src="/js/bracket.js"></script>
{% endblock %}
